{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,

    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "listEmittedFiles": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["src"]
}
